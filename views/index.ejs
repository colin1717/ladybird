<!DOCTYPE html>
<html>
  <head>
    <title>LadyBird</title>
   <link rel='stylesheet' href='/stylesheets/style.css' />
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css">
  </head>
  <body>
    <h1 style="color:lightblue">LadyBird</h1>
    <hr style="border-color:lightblue">

    <div class="container">
      <div class="row">
        <div class="col s5">
          <h4>Sign Up</h4>
          <div class="row">
            <form action="/signup" method="post">
              <div class="input-field">
                <input type="text" name="username" placeholder="username">
              </div>
              <div class="input-field">
                <input type="password" name="password" placeholder="password">
              </div>
              <div class="input-field">
                <input type="submit" value="Sign Up" class="waves-effect waves-light btn">
              </div>
            </form>
          </div>
        </div>
        <div class="col s2"></div>
        <div class="col s5">
          <h4>Login</h4>
          <div class="row">
            <form action="/login" method="post">
              <div class="input-field">
                <input type="text" name="username" placeholder="username">
              </div>
              <div class="input-field">
                <input type="password" name="password" placeholder="password">
              </div>
              <div class="input-field">
                <input type="submit" value="Login" class="waves-effect waves-light btn">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <hr style="border-color:lightblue">
  </body>
</html>
